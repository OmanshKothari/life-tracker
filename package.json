{
  "name": "life-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Gamified Life Tracker - Track goals, habits, and finances",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @life-tracker/web dev",
    "dev:api": "pnpm --filter @life-tracker/api dev",
    "build": "pnpm run --parallel build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm run --parallel typecheck",
    "db:migrate": "pnpm --filter @life-tracker/api db:migrate",
    "db:push": "pnpm --filter @life-tracker/api db:push",
    "db:seed": "pnpm --filter @life-tracker/api db:seed",
    "db:studio": "pnpm --filter @life-tracker/api db:studio"
  },
  "keywords": [
    "life-tracker",
    "gamification",
    "habits",
    "finance"
  ],
  "author": "Omansh",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/node": "^22.19.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
